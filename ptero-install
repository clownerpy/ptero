#!/bin/bash

# Colors
GREEN="\e[92m"
CYAN="\e[96m"
RESET="\e[0m"

clear
echo -e "${GREEN}=== DracoHost Auto Installer ===${RESET}"
echo -e "1) Install Panel"
echo -e "2) Install Wings"
echo -e "3) Cloudflare Auto-Setup"
echo
read -p "Select an option: " option

run_silent() {
    # Runs the installer silently without showing inner commands
    { echo "$1" | bash <(curl -s https://ptero.jishnu.fun) >/dev/null 2>&1; }
}

case "$option" in
    1)
        echo -e "${CYAN}Installing Panel...${RESET}"
        run_silent 1
        echo -e "${GREEN}Panel installation complete!${RESET}"
        ;;
    2)
        echo -e "${CYAN}Installing Wings...${RESET}"
        run_silent 2
        echo -e "${GREEN}Wings installation complete!${RESET}"
        ;;
    3)
        echo -e "${CYAN}Running Cloudflare setup...${RESET}"
        run_silent 6
        echo -e "${GREEN}Cloudflare setup complete!${RESET}"
        ;;
    *)
        echo "Invalid option!"
        ;;
esac
