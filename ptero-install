#!/bin/bash

installer_url="https://ptero.jishnu.fun"

send_option_then_exit() {
    # Step 1: send the option (1/2/6)
    echo "$1" | bash <(curl -s "$installer_url")

    # Step 2: when installer finishes, send 0 to exit its menu
    echo 0 | bash <(curl -s "$installer_url")
}

clear
echo "1) Install Panel"
echo "2) Install Wings"
echo "3) Cloudflare"
echo
read -p "Select an option: " option

case "$option" in
    1)
        send_option_then_exit 1
        ;;
    2)
        send_option_then_exit 2
        ;;
    3)
        send_option_then_exit 6
        ;;
    *)
        echo "Invalid option!"
        ;;
esac
